---
export interface Review {
  author: string;
  content: string;
  rating?: number; // 1-5
  avatar?: string;
}
export interface Props { reviews: Review[] }
const { reviews }: Props = Astro.props;

function stars(rating?: number) {
  const n = Math.max(0, Math.min(5, rating ?? 0));
  return '★★★★★☆☆☆☆☆'.slice(5 - n, 10 - n);
}
---
<section id="reviews" class="section bg-blue-50/20 relative overflow-hidden flex items-center">
  <!-- 简洁的蓝色背景 -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-100/10 via-transparent to-blue-200/5"></div>

  <div class="container-narrow w-full relative z-10 flex flex-col justify-center">
    <!-- 标题区域 -->
    <div class="text-center mb-24 space-dynamic-3">
      <h2 class="text-4xl md:text-6xl font-black text-black mb-6 animate-fade-in-up">
        Reader Reviews
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
        Sincere feedback from real readers, witnessing the value of this book
      </p>
      <div class="w-32 h-1 bg-blue-500 mx-auto rounded-full shadow-layer-2 animate-fade-in-up" style="animation-delay: 0.4s;"></div>
    </div>
    
    <!-- 评价卡片布局 -->
    <div class="grid md:grid-cols-2 gap-16 lg:gap-20 relative">
      {reviews.map((rv, index) => (
        <figure 
          class={`relative flowing-element animate-fade-in-up`}
          style={`animation-delay: ${0.6 + index * 0.2}s`}
        >
          <!-- 卡片容器 -->
          <div class={`p-10 rounded-3xl border border-blue-200/50 bg-white/95 backdrop-blur-sm transition-all duration-700 hover:scale-105 hover:-translate-y-4 relative organic-card ${
            index === 0 ? 'shadow-layer-4 transform -rotate-3 lg:translate-x-6' :
            index === 1 ? 'shadow-layer-3 transform rotate-2 lg:-translate-x-4' :
            index === 2 ? 'shadow-layer-4 transform -rotate-2 lg:translate-x-8' :
            'shadow-layer-3 transform rotate-3 lg:-translate-x-6'
          }`}>
            
            <!-- 作者信息区域 -->
            <div class="flex items-center gap-5 mb-8 relative z-10">
              {rv.avatar && (
                <div class="relative">
                  <img src={rv.avatar} alt={rv.author} class="h-14 w-14 rounded-2xl object-cover shadow-layer-3 ring-2 ring-blue-200" />
                  <div class="absolute -inset-1 bg-blue-400 rounded-2xl opacity-15 blur-sm"></div>
                </div>
              )}
              <figcaption class="font-bold text-xl text-slate-800">{rv.author}</figcaption>
              {rv.rating && (
                <span class="ml-auto text-blue-500 text-2xl" aria-label={`评分 ${rv.rating}`}>
                  {stars(rv.rating)}
                </span>
              )}
            </div>
            
            <!-- 评价内容 -->
            <blockquote class="text-slate-600 leading-relaxed text-lg italic relative z-10">
              <!-- 装饰性引号 -->
              <span class="absolute -top-4 -left-2 text-6xl text-blue-300 opacity-25 font-serif">"</span>
              <span class="relative z-10">{rv.content}</span>
              <span class="absolute -bottom-4 -right-2 text-6xl text-blue-300 opacity-25 font-serif">"</span>
            </blockquote>
            
            <!-- 悬停装饰线条 -->
            <div class="mt-8 h-1 bg-blue-400 opacity-0 hover:opacity-100 transition-all duration-700 transform scale-x-0 hover:scale-x-100 origin-left"></div>
          </div>
        </figure>
      ))}
    </div>
    


  </div>
</section>

<style>
  /* 自定义动画延迟 */
  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }
  
  /* 响应式调整 */
  @media (max-width: 1024px) {
    .lg\\:translate-x-6,
    .lg\\:-translate-x-4,
    .lg\\:translate-x-8,
    .lg\\:-translate-x-6 {
      transform: none !important;
    }
  }
  
  /* 增强的悬停效果 */
  .organic-card:hover::before {
    transform: rotate(45deg) scale(1.4);
  }
  
  /* 卡片悬停时的光效增强 */
  .organic-card:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(59, 130, 246, 0.1);
  }
  
  /* 评分星星动画 */
  .text-blue-500 {
    transition: all 0.3s ease;
  }
  
  .text-blue-500:hover {
    transform: scale(1.1);
    filter: drop-shadow(0 0 8px rgba(59, 130, 246, 0.5));
  }
</style>



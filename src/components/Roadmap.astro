---
export interface RoadmapItem { title: string; description?: string; quarter?: string }
export interface Props { items: RoadmapItem[] }
const { items }: Props = Astro.props;
---
<section id="roadmap" class="section bg-blue-50/30 relative overflow-hidden flex items-center">
  <!-- 简洁的蓝色背景 -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-100/10 via-transparent to-blue-200/5"></div>

  <div class="container-narrow w-full relative z-10 flex flex-col justify-center">
    <!-- 标题区域 -->
    <div class="text-center mb-24 space-dynamic-3">
      <h2 class="text-4xl md:text-6xl font-black text-black mb-6 animate-fade-in-up">
        Second Edition Plan
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
        Continuous improvement to provide students with better reading experience and content value
      </p>
      <div class="w-32 h-1 bg-blue-500 mx-auto rounded-full shadow-layer-2 animate-fade-in-up" style="animation-delay: 0.4s;"></div>
    </div>
    
    <!-- 时间线布局 -->
    <div class="relative">
      <!-- 有机时间线系统 -->
      <div class="relative">
        <!-- 时间线连接线 -->
        <div class="absolute left-8 top-0 bottom-0 w-1 bg-blue-200 rounded-full shadow-layer-1"></div>
        
        <!-- 时间线项目 -->
        <ol class="space-y-16 relative">
          {items.map((it, index) => (
            <li class="relative group animate-fade-in-up" style={`animation-delay: ${0.6 + index * 0.3}s`}>
              <!-- 状态指示器 -->
              <div class="absolute left-6 top-3 w-6 h-6 rounded-full bg-blue-500 shadow-layer-3 transform scale-100 group-hover:scale-125 transition-transform duration-500 ring-4 ring-white"></div>
              
              <!-- 卡片内容 -->
              <div 
                class={`ml-20 p-10 rounded-3xl border border-blue-200/50 bg-white/95 backdrop-blur-sm transition-all duration-700 hover:scale-105 hover:-translate-y-3 relative organic-card ${
                  index === 0 ? 'shadow-layer-4 transform -rotate-2 lg:translate-x-4' :
                  index === 1 ? 'shadow-layer-3 transform rotate-1 lg:-translate-x-2' :
                  'shadow-layer-4 transform -rotate-1 lg:translate-x-6'
                }`}>
                
                <!-- 头部信息区域 -->
                <div class="flex items-start justify-between mb-6 relative z-10">
                  <h3 class="text-3xl font-bold text-slate-800 leading-tight">{it.title}</h3>
                  {it.quarter && (
                    <span class="text-sm font-semibold px-4 py-2 rounded-2xl bg-slate-100/80 text-slate-700 shadow-layer-2 backdrop-blur-sm">
                      {it.quarter}
                    </span>
                  )}
                </div>
                
                <!-- 描述内容 -->
                {it.description && (
                  <p class="text-slate-600 leading-relaxed text-lg relative z-10">{it.description}</p>
                )}
                

                
                <!-- 悬停装饰线条 -->
                <div class="mt-8 h-1 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-700 transform scale-x-0 group-hover:scale-x-100 origin-left bg-blue-400"></div>
              </div>
            </li>
          ))}
        </ol>
        

      </div>
    </div>
    


  </div>
</section>

<style>
  /* 自定义动画延迟 */
  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }
  
  /* 响应式调整 */
  @media (max-width: 1024px) {
    .lg\\:translate-x-4,
    .lg\\:-translate-x-2,
    .lg\\:translate-x-6 {
      transform: none !important;
    }
  }
  
  /* 增强的悬停效果 */
  .organic-card:hover::before {
    transform: rotate(45deg) scale(1.4);
  }
  
  /* 卡片悬停时的光效增强 */
  .organic-card:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(59, 130, 246, 0.1);
  }
  
  /* 状态指示器动画 */
  .group:hover .absolute.left-6.top-3 {
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
</style>


